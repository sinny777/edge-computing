{
  "name": "edge-gateway",
  "version": "1.0.0",
  "description": "edge-gateway backend",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=12.0"
  },
  "scripts": {
    "build": "lb-tsc",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run clean && npm run build",
    "test": "lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t edge-gateway .",
    "docker:run": "docker run -p 3000:3000 -d edge-gateway",
    "migrate": "node ./dist/migrate",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run build",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache"
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/boot": "^3.3.0",
    "@loopback/core": "^2.15.0",
    "@loopback/repository": "^3.5.0",
    "@loopback/rest": "^9.2.0",
    "@loopback/rest-explorer": "^3.2.0",
    "@loopback/service-proxy": "^3.1.0",
    "@types/node-schedule": "^1.3.0",
    "loopback-connector-mongodb": "^5.3.0",
    "dotenv": "^8.2.0",
    "json-rules-engine": "^5.0.3",
    "node-schedule": "^1.3.2",
    "path": "^0.12.7",
    "systeminformation": "^5.6.4",
    "tslib": "^2.0.0"
  },
  "optionalDependencies": {
    "spi-device":"^3.1.1",
    "edge-sx127x": "^1.0.1"
  },
  "devDependencies": {
    "@loopback/build": "^6.3.0",
    "source-map-support": "^0.5.19",
    "@loopback/testlab": "^3.3.0",
    "@types/node": "^10.17.55",
    "@loopback/eslint-config": "^10.1.0",
    "eslint": "^7.22.0",
    "typescript": "~4.2.3"
  }
}
