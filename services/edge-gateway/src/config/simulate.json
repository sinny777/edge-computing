{
    "devices": [
        {
            "type":"HB_SENSOR_V1",
            "uniqueId":"HB_3C71BF4340FC",
            "publish": [
                {
                    "frequency": "*/5 * * * * *",
                    "sensors": [
                        {"name": "hum", "config" : {"min": 40, "max": 70}},
                        {"name": "temp", "config": {"min": 15, "max": 40}}                        
                    ]  
                },
                {
                    "frequency": "*/10 * * * * *",
                    "sensors": [
                        {"name": "press", "config": {"min": 974, "max": 976}},
                        {"name": "alt", "config": {"min": 304, "max": 306}}
                    ]  
                }              
            ]      
        }
    ],
    "rules": [
        {
            "conditions": {
                "any": [
                    {
                        "all": [
                            {
                                "fact": "type",
                                "operator": "equal",
                                "value": "HB_SENSOR_V1"
                            },
                            {
                                "fact": "d",
                                "operator": "greaterThanInclusive",
                                "value": 35,
                                "path": "$.temp"
                            },
                            {
                                "fact": "d",
                                "operator": "greaterThanInclusive",
                                "value": 55,
                                "path": "$.hum"
                            }
                        ]
                    }                    
                ]
            },
            "event": {
                "type": "switchOnAC",
                "params": {
                    "message": "Its too hot, turn on the AC!"
                }
            }
        },
        {
            "conditions": {
                "any": [
                    {
                        "all": [
                            {
                                "fact": "type",
                                "operator": "equal",
                                "value": "HB_SENSOR_V1"
                            },
                            {
                                "fact": "d",
                                "operator": "greaterThanInclusive",
                                "value": 975,
                                "path": "$.press"
                            },
                            {
                                "fact": "d",
                                "operator": "greaterThanInclusive",
                                "value": 305,
                                "path": "$.alt"
                            }
                        ]
                    }
                ]
            },
            "event": {
                "type": "TooHigh",
                "params": {
                    "message": "Its too high, come down!"
                }
            }
        }        
    ]
}